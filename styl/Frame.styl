.frame {
	height: 100%;
	
	box-vertical();
	background-color: $frame-background-color;
	background-size: 0.75em;
	background-image: linear-gradient(left, rgba(0, 0, 0, 0.01) 31%, transparent 31%, transparent);

    
    button.large,
    a.button.large {
        display: block;
        margin: 0.3em 0.6em;
    }

    button.large {
        // TBD: why can't we figure out how to get a button to behave correctly?
        width: 100%;
        margin-left: auto;
        margin-right: auto;
    }
}

.well {
    clearfix();
    
	margin: 0.85em;
	padding: 1em;

	background: $frame-inner-background-color;
	
	box-shadow: 0 0.125em 0 $frame-highlight-color,
	            inset 0 0.1em 0.2em rgba(0, 0, 0, 0.25);

	border: $px solid $frame-inner-border-color;
	border-radius: 1em;

	h2 {
		margin: 0;
	}

	p {
		margin: 1em 0 0 0;
	}
}

.well + .well {
    margin-top: 0.5em;
}