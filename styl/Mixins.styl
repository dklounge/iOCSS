adjust-colors(list, by = 10%) {
    newList = ()
    for color in list {
        push(newList, lighten(color, by))
    }
    
    return newList
}

// Enable iOS scrolling
scrollable() {
	overflow-y: auto;
	-webkit-overflow-scrolling: touch;
}

// Box sizing
border-box() {
	box-sizing: border-box;
}

// Button colors
gradient-shiny($colors) {
    background-image: linear-gradient(top, $colors[0] 0%, $colors[1] 50%, $colors[2] 51%, $colors[3] 76%, $colors[4] 100%);
}

/*
Various helpers for CSS3 flexible box model
*/
box-horizontal() {
	display: box;
	box-orient: horizontal;
	box-align: stretch;
}

box-vertical() {
	display: box;
	box-orient: vertical;
	box-align: stretch;
}

box-center() {
	box-pack: center;
	box-align: center;
}
