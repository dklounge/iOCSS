form.search {
	position: relative;

	padding: 0.357em 0.5em;

	border-bottom: $px solid $search-border-color;
	
	gradient($search-gradient);

    box-shadow: 0 0.175em 1em rgba(0,0,0,0.3);


	i {
		position: absolute;
		
		color: $search-icon-color;
		font-size: 1.357em;
	}

	i.icon-search {
		top: 0.475em;
		left: 0.85em;
	}

	i.icon-remove-sign {
		border-box();
		display: block;
		width: 1.47383935151068em;
		height: 1.47383935151068em;
	
		top: 0.263em;
		right: 0.5em;
	
		line-height: 1.55em;
	
		text-align: center;
		cursor: pointer;
	}

	input {
		border-box();
		width: 100%;
		height: 2em;
		padding: 0.357em 0.75em 0.357em 2em;
	
	    box-shadow: inset 0 0.125em 0.25em rgba(0,0,0,0.2);

		border: $px solid $search-field-border-color;
		border-radius: 1em;
		
		font-size: 1em;
	
		outline: none;
	}
}
