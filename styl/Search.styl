form.search {
	position: relative;

	padding: 0.375rem 0.5rem;

	border-bottom: $px solid $search-border-color;
	
	gradient($search-gradient);

	i {
		position: absolute;
		
		color: $search-icon-color;
		font-size: 1.25rem;
	}

	i.icon-search {
		color: $search-icon-color;
		font-size: 1.125rem;
		top: 0.8125rem;
		left: 1.125rem;
	}

	i.icon-remove-sign {
		border-box();
		display: block;
		width: 1.625rem;
		height: 1.625rem;
	
		top: 0.75rem;
		right: 0.75rem;
	
		text-align: center;
		cursor: pointer;
	}

	input {
		border-box();
		width: 100%;
		height: 2rem;
		padding: 0.357rem 0.75rem 0.357rem 2rem;
	
	    box-shadow: inset 0 0.125rem 0.125rem rgba(0,0,0,0.25);

		border: $px solid $search-field-border-color;
		border-radius: 1rem;
		
		font-size: 1rem;
	
		outline: none;

		&::-webkit-input-placeholder{
			color: $search-placeholder-color;
		}
	}
}
