/* Button: Default: Gray */
button,
a.button {
	display: inline-block;
	padding: 0.5em 0.75em;

	border: $px solid rgb(110, 110, 110);
	border-radius: 0.35em;

	gradient($button-gray-gradient);
	
	box-shadow: inset 0 0.05em 0.05em rgba(255, 255, 255, 0.55),
	            inset 0 -0.05em 0.05em rgba(255, 255, 255, 0.15),
	            inset 0.05em 0 0.05em rgba(255, 255, 255, 0.15),
	            inset -0.05em 0 0.05em rgba(255, 255, 255, 0.15),
				0 0 0.125em rgba(0, 0, 0, 1),
				0 0.1em 0.05em rgba(255, 255, 255, 0.35);

	color: $button-text-color;
    font-family: $button-font;
	font-size: 0.9em;
	font-weight: bold;
	text-shadow: 0 -1*$px 0 rgba(0, 0, 0, 0.5);
	text-decoration: none; /* Reset underline on a.button */
	text-align: center;
	
	user-select: none;
	
	cursor: pointer;
	
	.badge {
		position: absolute;
		right: 0.1em;
		top: 0.1em;
		z-index: 1;
		
		font-size: 0.9em;
	}
	
	&:active {
		gradient($button-gray-down-gradient);
	}
	

	// Large button
	&.large {
	    font-size: 1.5em;
	
		& i {
			font-size: 1.35em;
			vertical-align: middle;
			line-height: 0.5em;
			margin-right: 0.1em;
		}
	}


	/* Button: blue */
	&.blue {
		border-color: $button-blue-border-color;
	
		gradient-shiny($button-blue-gradient);

		&:active {
			gradient-shiny($button-blue-down-gradient);
		}
	}

	/* Button: green */
	&.green {
		border-color: $button-green-border-color;
	
		gradient-shiny($button-green-gradient);

		&:active {
			gradient-shiny($button-green-down-gradient);
		}
	}
	
	/* Button: black */
	&.black {
		border-color: $button-black-border-color;
	
		gradient($button-black-gradient);

		&:active {
			gradient($button-black-down-gradient);
		}
	}

	/* Button: red */
	&.red {
		border-color: $button-red-border-color;
	
	    gradient-shiny($button-red-gradient);
	
		&:active {
		    gradient-shiny($button-red-down-gradient);
		}
	}


	/* Button: round */
	&.round {
		position: relative;
		border-box();
	
		margin: 0.8em 0 0 0.8em;
		padding: 0;
		width: 1.675em;
		height: 1.675em;
	
		overflow: hidden;
    
		border: 0.175em solid white;
		border-radius: 1em;

		color: white;
		line-height: 1.475em;
		text-align: center;

		box-shadow: 0 0 0.4em rgba(0,0,0,0.5);

		text-shadow: 0 -1*$px 0 rgba(0, 0, 0, 0.2);
	
		i {
			font-size: 1.15em;
		}

		&.blue {
			gradient($button-round-blue-gradient);
		
			&:active {
			    gradient($button-round-blue-down-gradient);
			}
		}

		&.red {
			gradient($button-round-red-gradient);
		
			&:active {
			    gradient($button-round-red-down-gradient);
			}
		}
		
		&.unlockDelete {
			transition: all 0.075s ease-in;
			
			&.unlocked {
				transform: rotate(-90deg);
				
				margin-top: 0.0000001em; // Fix a Chrome bug when toggling the rotation a few times
			}
		}
	}
	
	$arrow-button-radius = 0.45em;
	$arrow-button-triangle-size = 1.36em;
	$arrow-button-triangle-rotation = -10deg;
	
	&.back,
	&.forward {
		position: relative;
		
		&:before {
			position: absolute;
			
			height: $arrow-button-triangle-size;
			width: 	$arrow-button-triangle-size;
			
			z-index: 1;
			content: '';
		}
	}
	
	&.back {
		margin-left: 0.65em !important;
		
		padding-left: 0.575em !important;
		
		border-top-left-radius: 	$arrow-button-radius !important;
		border-bottom-left-radius: 	$arrow-button-radius !important;
		
		&:before {
			top: 0.423em;
			left: -0.487em;

			background: red;
		
			background-image: -webkit-gradient(linear, left bottom, right top, from($header-button-gradient[1]), to($header-button-gradient[0]));
			
			transform: translate3d(0,0,0) rotate(-45deg) skew($arrow-button-triangle-rotation, $arrow-button-triangle-rotation);
		
			box-shadow: 0.0795em 0.0795em 0.085em rgba(0,0,0,0.525) inset;
					
			border-left: $px solid rgba(255,255,255,0.175);
			// border-left: $px solid rgb(160,175,199);

			-webkit-mask-image: -webkit-gradient(linear, left top, right bottom,
					from(black),
					color-stop(0.43, black),
					color-stop(0.435, transparent),
					to(transparent));
		}
		
		&:active:before {
			background-image: -webkit-gradient(linear, left bottom, right top, from($header-button-down-gradient[1]), to($header-button-down-gradient[0]));
		}
	}

	&.forward {
		margin-right: 0.65em !important;
		
		padding-right: 0.575em !important;
		
		border-top-right-radius: 	$arrow-button-radius !important;
		border-bottom-right-radius: $arrow-button-radius !important;
		
		&:before {
			top: 0.39em;
			right: -0.4585em;
		
			background-image: -webkit-gradient(linear, left bottom, right top, from($header-button-gradient[0]), to($header-button-gradient[1]));
			
			transform: translate3d(0,0,0) rotate(135deg) skew($arrow-button-triangle-rotation, $arrow-button-triangle-rotation);
			
			box-shadow: 0.0795em 0.0795em 0.085em rgba(0,0,0,0.525) inset;
			
			border-top: $px solid rgba(255,255,255,0.175);
			// border-top: $px solid rgb(160,175,199);

			-webkit-mask-image: -webkit-gradient(linear, left top, right bottom,
					from(black),
					color-stop(0.43, black),
					color-stop(0.435, transparent),
					to(transparent));
		}
				
		&:active:before {
			background-image: -webkit-gradient(linear, left bottom, right top, from($header-button-down-gradient[0]), to($header-button-down-gradient[1]));
		}
	}

	/* Button: Disabled */
	&.disabled,
	&:disabled,
	&:disabled:active,
	&.disabled:active {
		border-color: $button-disabled-border-color;

		box-shadow: inset 0 -($px) $px rgba(0, 0, 0, 0.05),
					inset 0 $px 2*$px rgba(0, 0, 0, 0.1);
				
		gradient($button-disabled-gradient);
	
		cursor: default;
	}
}
