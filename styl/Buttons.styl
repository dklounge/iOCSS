/* Button: Default: Gray */
button,
a.button {
	padding: 0.313em 0.5em;
	
	border: $px solid;
	border-color: $button-gray-border-color;
	border-radius: 0.357em;
	border-bottom: $px solid rgba(255, 255, 255, 0.4);

	background: linear-gradient($button-gray-gradient-start-color, $button-gray-gradient-end-color);
	
	box-shadow: inset 0 -($px) $px rgba(0, 0, 0, 0.2),
				inset 0 $px 2*$px rgba(0, 0, 0, 0.3);

	color: $button-text-color;
	font-size: 1em;
	font-weight: bold;
	text-shadow: 0 0 -($px) rgba(0, 0, 0, 0.5);
	text-decoration: none; /* Reset underline on a.button */
	
	cursor: pointer;
}

button:active,
a.button:active {
	background: linear-gradient($button-gray-down-gradient-start-color, $button-gray-down-gradient-end-color);
}


/* Button: blue */
button.blue,
a.button.blue {
	border-color: $button-blue-border-color;
	
	background: linear-gradient($button-blue-gradient-start-color, $button-blue-gradient-end-color);
}

button.blue:active,
a.button.blue:active {
	background: linear-gradient($button-blue-down-gradient-start-color, $button-blue-down-gradient-end-color);
}


/* Button: red */
button.red,
a.button.red {
	border-color: $button-red-border-color;
	
	background: linear-gradient($button-red-gradient-start-color, $button-red-gradient-end-color);
}

button.red:active,
a.button.red:active {
	background: linear-gradient($button-red-down-gradient-start-color, $button-red-down-gradient-end-color);
}

/* Button: round */
button.round,
a.button.round {
	border-box();
	
	margin: 0.8em 0 0 0.8em;
	padding: 0;
	width: 1.75em;
	height: 1.75em;
    
	border: 0.175em solid white;
	border-radius: 1em;

	color: white;
	line-height: 1.55em;
	text-align: center;

	box-shadow: 0 0 0.4em rgba(0,0,0,0.5);

	i {
		font-size: 1.2em;
	}

	&.blue {
		background: linear-gradient($button-round-blue-gradient-start, $button-round-blue-gradient-end);
		
		&:active {
		    background: linear-gradient($button-round-blue-down-gradient-start, $button-round-blue-down-gradient-end);
		}
	}

	&.red {
		background: linear-gradient($button-round-red-gradient-start, $button-round-red-gradient-end);
		
		&:active {
		    background: linear-gradient($button-round-red-down-gradient-start, $button-round-red-down-gradient-end);
		}
	}
}


/* Button: Disabled */
button.disabled,
button:disabled,
a.button.disabled,
button.disabled:active,
button:disabled:active,
a.button.disabled:active {
	border-color: $button-disabled-border-color;

	box-shadow: inset 0 -($px) $px rgba(0, 0, 0, 0.05),
				inset 0 $px 2*$px rgba(0, 0, 0, 0.1);
				
	background: linear-gradient($button-disabled-gradient-start-color, $button-disabled-gradient-end-color);
	
	cursor: default;
}