ul.list {
	box-flex: 1;
	
	padding: 0;
	margin: 0;
	
	list-style: none;

	li {
	    border-box();
		box-horizontal();
		box-align: center;
		box-pack: start;
	    
	    width: 100%;
		height: 3em;
		padding: 0 0.5em;
	    
		border-bottom: $px solid $list-border-color;
		
		cursor: pointer;
		overflow: hidden;
		
		> strong,
		> span {
			box-flex: 2;
			
			font-size: 1.25em;
		}
		
		a.button,
		button {
			padding: 0.3em 0.5em;
			margin: 0.05em 0 0 0;
			
			text-align: center;
		}
		
		a.button.round,
		button.round {
			padding: 0;
			margin: 0 0.75em 0 0.5em;
			
			font-size: 0.85em;
		}
		
		a.button.unlock,
		button.unlock {
			transition: all 0.075s ease-in;
			
			&.unlocked {
				transform: rotate(-90deg);
			}
		}
	
		div:last-child {
			box-flex: 1;
			
			text-align: right;
			
			a.button.details,
			button.details {
				padding-left: 0.085em;
			}
	
			i.view {
				color: $list-view-color;
				font-size: 1.45em;
				height: 1em;
			}
		}
	}
}