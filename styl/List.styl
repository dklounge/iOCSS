ul.list {
	box-flex: 1;
	
	padding: 0;
	margin: 0;
	
	list-style: none;

	li {
	    border-box();
		box-horizontal();
		box-align: center;
		box-pack: start;
	    
	    width: 100%;
		height: 3rem;
		padding: 0 0.5rem;
	    
		border-bottom: $px solid $list-border-color;
		
		cursor: pointer;
		overflow: hidden;
		
		> strong,
		> span {
			box-flex: 2;
			
			font-size: 1.25rem;
		}
		
		a.button,
		button {
			padding: 0.3rem 0.5rem;
			margin: 0.05rem 0 0 0;
			
			text-align: center;
		}
		
		a.button.round,
		button.round {
			padding: 0;
			margin: 0 0.75rem 0 0.5rem;
			
			font-size: 0.85rem;

			i {
				font-size: 1rem;
				line-height: 1.2
			}
		}
		
	
		div:last-child {
			box-flex: 1;
			
			text-align: right;
			
			a.button.details,
			button.details {
				padding-left: 0.085rem;
			}
	
			i.view {
				color: $list-view-color;
				font-size: 1.45rem;
				height: 1rem;
			}
		}
	}
}