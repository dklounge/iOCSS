div.header {
	width: 100%;

	position: relative;
	
	height: $header-height;

	box-shadow: 0 2*$px 4*$px $header-shadow-color;

	border-bottom: $px solid $header-border-color;
	
	gradient($header-gradient);

	h1 {
		width: 100%;	
		margin: 0;
		padding: 0;
	
		position: absolute;
		top: 0;
		left: 0;
		z-index: 1;
	    
		color: $header-text-color;
		font-weight: bold;
		font-size: 1.25em;
		line-height: 2.25em;
		text-align: center;
		text-shadow: 0 -0.1em 0 $header-text-shadow-color;
	
		text-overflow: ellipsis;
	}

	> div {
		/* Center the buttons vertically */
		box-horizontal();
		box-center();
		border-box();
		
		height: $header-height + 0.1;
		padding: 0 0.25em 0 0.25em;
		
		position: absolute;
		top: 0;
		z-index: 2;	
	
		/* The first div should be shoved to the left */
		&:first-child {
			text-align: left;
			left: 0;
		}

		/* The last div should be shoved to the right */
		&:last-child {
			text-align: right;
			right: 0;
		}

		/* Header buttons have a different look */
        a.button,
		button {
		    padding: 0.5em 0.75em;
			margin: -0.1em 0.25em 0 0.25em;
		
		    border: none;
	        border-radius: 0.5em;
	
        	box-shadow: inset 0 0.1em 0.1em rgba(0, 0, 0, 0.55),
        	            inset 0 -0.1em 0.05em rgba(0, 0, 0, 0.3),
        	            inset 0.1em 0 0.05em rgba(0, 0, 0, 0.2),
        	            inset -0.1em 0 0.05em rgba(0, 0, 0, 0.2),
        				0 0.1em 0.05em rgba(255, 255, 255, 0.35);
        				
			gradient($header-button-gradient);
			
			&.default {
				gradient($header-button-default-gradient);
				
				&:active {
					gradient($header-button-default-down-gradient);
				}
		
				&.back:before {
					background-image: -webkit-gradient(linear, left bottom, right top, from($header-button-default-gradient[1]), to($header-button-default-gradient[0]));
				}
			}
			
			&:active {
				gradient($header-button-down-gradient);
			}
		}
	    
	}
}
