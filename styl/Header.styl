$header-button-size = 34*$px;

div.header {
	width: 100%;

	position: relative;
	
	box-sizing: border-box;
	
	height: $header-height;

	box-shadow: 0 2*$px 4*$px $header-shadow-color;

	border-bottom: $px solid $header-border-color;
	
	gradient($header-gradient);

	h1 {
		width: 100%;	
		margin: 0;
		padding: 0;
	
		position: absolute;
		top: 0;
		left: 0;
		z-index: 1;
	    
		color: $header-text-color;
		font-weight: bold;
		font-size: 1.25rem;
		line-height: 2.9rem;
		text-align: center;
		text-shadow: 0 -0.1rem 0 $header-text-shadow-color;
	
		text-overflow: ellipsis;
	}

	> div {
		// Position above heading
		position: relative;
		z-index: 2;
		
		// Center the buttons vertically
		box-horizontal();
		box-align: center;
		box-flex: 1;
		
		border-box();
		
		// height: $header-height;
		padding: 8*$px 0.25rem 0 0.25rem;
		
		&:first-child {
			float: left;
		}

		&:last-child {
			float: right;
		}

		/* Header buttons have a different look */
        a.button,
		button {
			position: relative; // so badges can be positioned
			
			vertical-align: top; // for consistency between back/other buttons
			
			border-box();
			height: $header-button-size;
			
		    padding: 0.5rem 0.75rem;
			margin: -0.125rem 0.25rem 0 0.25rem;

			font-size: 1rem;

		    border: none;
	        border-radius: 0.5rem;
	
        	box-shadow: inset 0 0.1em 0.1em rgba(0, 0, 0, 0.55),
        	            inset 0 -0.1em 0.05em rgba(0, 0, 0, 0.3),
        	            inset 0.1em 0 0.05em rgba(0, 0, 0, 0.2),
        	            inset -0.1em 0 0.05em rgba(0, 0, 0, 0.2),
        				0 0.1em 0.05em rgba(255, 255, 255, 0.35);
        				
			gradient($header-button-gradient);

			// i:first-child:last-child {
			// 	display: block;
			// 	width: 0.92em;
			// 	height: 1em;
			// 	margin: 0 -0.15em;
			// 	
			// 	font-size: 1.2em;
			// 	line-height: 1.1em;
			// }
			// &.forward:before {
			// 	background-image: -webkit-gradient(linear, left bottom, right top, from($header-button-gradient[0]), to($header-button-gradient[1]));
			// }

			&:active {
				gradient($header-button-down-gradient);
			}

			&.default {
				gradient($header-button-default-gradient);
				
				&:active {
					gradient($header-button-default-down-gradient);
				}
				
				&.back:before,
				&.forward:before {
					background-image: -webkit-gradient(linear, left bottom, right top, from($header-button-default-gradient[1]), to($header-button-default-gradient[0]));
				}
				
				&.back:active:before,
				&.forward:active:before {
					background-image: -webkit-gradient(linear, left bottom, right top, from($header-button-default-down-gradient[1]), to($header-button-default-down-gradient[0]));
				}
			}
		}
	    
	}
}
