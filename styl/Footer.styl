div.footer {
    box-horizontal();
    box-center();
    
    width: 100%;
    height: $footer-size;
    
    border-top: $px solid $footer-border-color;
    
    background: linear-gradient($footer-gradient-start, $footer-gradient-end);
    
    button,
    a.button {
        width: $footer-size+2;
        height: (1 / $footer-font-size) * $footer-size;
        display: block;
        margin: 0;
        
        background: linear-gradient($footer-gradient-start, $footer-gradient-end);
        
        border: none;
        border-left: (1 / $footer-font-size)*$px solid $footer-button-border-left-color;
        border-right: (1 / $footer-font-size)*$px solid $footer-button-border-right-color;
        border-radius: 0;
        
        box-shadow: none;
        
        color: $footer-button-text-color;
        font-weight: bold;
        font-size: $footer-font-size;
        
        i {
            text-shadow: none;
            display: block;
            
            height: $footer-icon-height;
            margin: ($footer-size / 14) 0;
        }
        i:before {
            font-size: $footer-icon-size;
            
            color: $footer-icon-color;
            -webkit-mask-image: -webkit-gradient(linear, left top, left bottom, from(rgba(0,0,0,1)), to(rgba(0,0,0,0)));
            /*
            // Can't do this due to Webkit bug #67415, makes text blurry
            background: -webkit-gradient(linear, left top, left bottom, from($footer-icon-gradient[0]), to($footer-icon-gradient[1]));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            */
        }
        
        &.down {
            color: $footer-button-down-text-color;
        	box-shadow: inset 0 $px 5*$px rgba(0, 0, 0, 0.5);
				
            background: linear-gradient($footer-button-down-gradient-start, $footer-button-down-gradient-end);
            
            
            i:before {
                color: $footer-icon-down-color;
                
                -webkit-mask-image: -webkit-gradient(linear, left top, left bottom, from(rgba(0,0,0,0.65)), to(rgba(0,0,0,1)));
                /*
                // Can't do this due to Webkit bug #67415, makes text blurry
                background: -webkit-gradient(linear, left top, left bottom, from($footer-icon-down-gradient[0]), to($footer-icon-down-gradient[1]));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                */
            }
        }
        
        &:first-child {
            border-left: none;
        }
        
        &:last-child {
            border-right: none;
        }
    }
}
