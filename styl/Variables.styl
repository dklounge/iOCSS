/* Base
/* --------------------------------- */
$base-size = 16;

$px = 1 / $base-size + 0em;


/* Header
/* --------------------------------- */
$header-height = 2.75em;
$header-border-color = rgb(56, 85, 112);
$header-gradient-start = rgb(177, 191, 211);
$header-gradient-end = rgb(91, 116, 151);
$header-shadow-color = rgba(0, 0, 0, 0.1);
$header-text-shadow-color = rgba(0, 0, 0, 0.75);

$header-button-gradient-start = rgb(154, 170, 194);
$header-button-gradient-end = rgb(69, 98, 141);

$header-button-default-gradient-start = rgb(143, 174, 237);
$header-button-default-gradient-end = rgb(59, 105, 220);


/* Search
/* --------------------------------- */
$search-icon-color = rgb(150, 155, 161);
$search-gradient-start = rgb(224, 228, 231);
$search-gradient-end = rgb(180, 190, 198);
$search-field-border-color = rgb(150, 150, 150);


/* Editor
/* --------------------------------- */
$editor-background-color = rgb(208, 212, 220);
$editor-fields-border-color = rgb(161, 167, 173);
$editor-field-border-color = rgb(202, 202, 202);
$editor-label-text-color = rgb(81, 102, 145);


/* List
/* --------------------------------- */
$list-border-color = rgb(224, 224, 224);


/* Buttons
/* --------------------------------- */
$button-text-color = rgb(255, 255, 255);

/* Button: Blue */
$button-blue-border-color = rgba(14, 64, 107, 0.70);

$button-blue-gradient-start-color = rgb(80, 163, 226);
$button-blue-gradient-end-color = rgb(36, 127, 204);

$button-blue-down-gradient-start-color = darken($button-blue-gradient-start-color, 10%);
$button-blue-down-gradient-end-color = darken($button-blue-gradient-end-color, 10%);

/* Button: Gray */
$button-gray-border-color = rgba(51, 51, 51, 0.50);

$button-gray-gradient-start-color = rgb(206, 206, 206);
$button-gray-gradient-end-color = rgb(156, 156, 156);

$button-gray-down-gradient-start-color = darken($button-gray-gradient-start-color, 10%);
$button-gray-down-gradient-end-color = darken($button-gray-gradient-end-color, 10%);

/* Button: Red */
$button-red-border-color = rgba(156, 0, 0, 0.70);

$button-red-gradient-start-color = rgb(255, 51, 51);
$button-red-gradient-end-color = rgb(206, 2, 2);

$button-red-down-gradient-start-color = darken($button-red-gradient-start-color, 10%);
$button-red-down-gradient-end-color = darken($button-red-gradient-end-color, 10%);

/* Button: Round: Blue */
$button-round-blue-gradient-start = rgb(126, 168, 231);
$button-round-blue-gradient-end = rgb(55, 113, 215);

$button-round-blue-down-gradient-start = darken($button-round-blue-gradient-start, 10%);
$button-round-blue-down-gradient-end = darken($button-round-blue-gradient-end, 10%);

/* Button: Round: Red */
$button-round-red-gradient-start = rgb(227, 121, 128);
$button-round-red-gradient-end = rgb(190, 25, 34);

$button-round-red-down-gradient-start = darken($button-round-red-gradient-start, 10%);
$button-round-red-down-gradient-end = darken($button-round-red-gradient-end, 10%);

/* Button: Disabled */
$button-disabled-border-color = rgba(51, 51, 51, 0.20);

$button-disabled-gradient-start-color = rgb(223, 223, 223);
$button-disabled-gradient-end-color = rgb(208, 208, 208);
